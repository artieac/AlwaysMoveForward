@model AlwaysMoveForward.AnotherBlog.Web.Areas.Admin.Models.SiteModel

@using AlwaysMoveForward.AnotherBlog.Common.DomainModel;
@using AlwaysMoveForward.AnotherBlog.Web.Code.Extensions;
@using AlwaysMoveForward.AnotherBlog.Web.Code.Utilities;
@{
    Layout  = "~/Areas/Admin/Views/Shared/_AdminToolLayout.cshtml";
 }

 @section headerPlugins
 {

 }
 <div class="bodyContent">        
    <div class="contentPageTitle">
        <label>Manage Blogs</label>
    </div> 
    <a href="/Admin/Blog/Edit">Add Blog</a>
    <table>
        <thead>
            <tr>
                <th width="20%">Name</th>
                <th width="20%">Description</th>
            </tr>
        </thead>
        <tbody>
        @{
            int rowCounter = 0;
                       
            foreach (Blog blogItem in ViewData.Model.Blogs)
            {
                if (rowCounter % 2 == 0)
                {
                   <text><tr class='tableRow1'></text>
                }
                else
                {
                    <text><tr class='tableRow2'></text>
                }

                rowCounter++;
       
                <td><a href="/Admin/ManageBlog/EditBlog?blogId=@blogItem.BlogId.ToString()">@blogItem.Name</a></td>
                <td>@blogItem.Description</td>
                @Html.Raw("</tr>")
        
            }
        }
        </tbody>
    </table>
    <a href="/Admin/Blog/Edit">Add Blog</a>
</div>        