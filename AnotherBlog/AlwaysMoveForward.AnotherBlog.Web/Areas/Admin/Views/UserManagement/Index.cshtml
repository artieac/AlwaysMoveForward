@model AlwaysMoveForward.AnotherBlog.Web.Areas.Admin.Models.UserModel
@using AlwaysMoveForward.Common.DataLayer.Entities;
@using AlwaysMoveForward.AnotherBlog.Common.DomainModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminToolLayout.cshtml";
}
 @section headerPlugins
 {
     <script src="@Url.Content("~/Scripts/Admin/ManageUsers.js")" type="text/javascript"></script>
 }
<div class="bodyContent">        
    <div class="contentPageTitle">
        <label>Manage Users</label>
    </div> 
    <div class="editAreaContainer">
        <div class="editAreaSubContainer">
            <br />
            <a href="/Admin/UserManagement/Edit">Add User</a>
            <table class="tableBase">
                <thead>
                    <tr class="tableHeader">
                        <td width="20%">User</td>
                        <td width="20%">Display Name</td>
                        <td width="20%">Email</td>
                        <td>&nbsp;</td>
                    </tr>
                </thead>
                <tbody>
                @{
                        
                    int rowCounter = 0;
                        
                    foreach (User blogUser in @Model.Users)
                    {   
                        if (rowCounter % 2 == 0)
                        {
                            <text><tr class='tableRow1'></text>
                        }
                        else
                        {
                            <text><tr class='tableRow2'></text>
                        }

                        rowCounter++;

                        <td><a href="/Admin/UserManagement/Edit?userId=@blogUser.UserId.ToString()">@blogUser.UserName</a></td>
                        <td>@blogUser.DisplayName</td>
                        <td>@blogUser.Email</td>
                        <td><a href="/Admin/UserManagement/Delete?userId=@blogUser.UserId.ToString()"><img src="/Content/images/action_delete.png" class="deleteComment" alt=""/></a></td>
                        @Html.Raw("</tr>");
                    }
                }
                </tbody>
            </table>
            <div class="pager">    
                @Html.Pager(@Model.Users.PageSize, @Model.Users.PageNumber, @Model.Users.TotalItemCount, "Index", null)
            </div>
            <a href="/Admin/UserManagement/Edit">Add User</a>
        </div>
    </div>
</div>