<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:ng="http://angularjs.org" ng-app="theApp">
<head>
    <title>@ViewBag.Title</title>
    <meta name="title" content="AlwaysMoveForward.com - @ViewBag.Title" />
    <meta name="author" content="Arthur Correa" />
    <meta name="copyright" content="Arthur Correa" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Arthur, Correa, Computer, .NET, C#, Weblog, Blog, Disney, Games, MicroService, Service, SOA" name="keywords" />
    <meta name="description" content="Arthur Correa on Software Design, C#, .Net, Disney, Video Games, The Cloud and More" />
    <script src="@Url.Content("~/Scripts/jquery-2.1.4.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/angular.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/angular-resource.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/angular-sanitize.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Modules/ServiceDefinitionModule.js")" type="text/javascript"></script>
    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-8501938-1', 'auto');
        ga('send', 'pageview');

    </script>
    <link href="@Url.Content("~/Content/ThemeDefaults.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/NavBar.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/Services/BlogPostService.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Controllers/BlogPostController.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Controllers/TwitterController.js")" type="text/javascript"></script>
    @RenderSection("headerPlugins", false)
</head>
<body ng-app="theApp">
    <div class="subBody">
        <!-- Header -->
        <div id="header">
            <div id="headerCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    @for (int i = 0; i < ViewBag.CarouselModel.CarouselItems.Count; i++)
                    {
                        <li data-target="#headerCarousel" data-slide-to="@i" @(i == 0 ? "class=active" : "")></li>
                    }
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    @{
                        int active = 0;

                        foreach (string carouselItem in ViewBag.CarouselModel.CarouselItems)
                        {
                            <div class="item @(active == 0 ? " active" : "")">
                                <img src="@carouselItem">
                            </div>
                            active++;
                        }
                    }
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#headerCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#headerCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="navbar navbar-inverse">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li @if (ViewBag.Page == 0) { <text> class='active' </text>      }><span></span><a href="/Home/Index">Home</a></li>
                        <li @if (ViewBag.Page == 1) { <text> class='active' </text>      }><a href="/Home/About">About</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <div class="mainContentPanel">
                    <div class="bodyContainer">
                        @RenderBody()
                    </div>
                </div>
                <div class="externalDataSection">
                    <div class="row">
                        <div class="col-md-8" ng-controller="BlogPostController" ng-init="getMostRecent('@AlwaysMoveForward.MainSite.MvcApplication.BlogUrlRoot')">
                            <div ng-show="waitingForData">
                                <img src="/Content/Images/waitingForData.gif" /> Loading most recent blog post
                            </div>
                            <div ng-show="!waitingForData">
                                <div class="blogPostSection">
                                    <div class="blogPostTitle">{{ mostRecentBlogPost.Title }}</div>
                                    <div class="blogPostPosted">Posted {{ formatDate(mostRecentBlogPost.DatePosted) | date:"MM/dd/yyyy" }}</div>
                                    <div class="blogPostText" ng-bind-html="mostRecentBlogPost.ShortEntryText"></div>
                                    <div><a href="{{ mostRecentBlogPost.BlogPostUrl }}">more...</a></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4" ng-controller="TwitterController">
                            <div class="" ng-init="getTwitterPosts()">
                                <a class="twitter-timeline"
                                   href="https://twitter.com/artieAC"
                                   data-widget-id="609318037657927680"
                                   height="500"
                                   tweet-limit="5"
                                   theme="light">Tweets by artieAC</a>
                                <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + "://platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } }(document, "script", "twitter-wjs");</script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- Right hand Ads 2 -->
                <ins class="adsbygoogle"
                     style="display:inline-block;width:160px;height:600px"
                     data-ad-client="ca-pub-3336890036210397"
                     data-ad-slot="2992233865"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        </div>
        <!-- Copyright -->
        <div class="footer">
            <div class="footerCopyright">
                <span>&copy; AlwaysMoveForward.com. All rights reserved</span>
            </div>
        </div>
        <div class="bottomAdContainer">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- Bottom Ad Panel -->
            <ins class="adsbygoogle"
                 style="display:inline-block;width:728px;height:90px"
                 data-ad-client="ca-pub-3336890036210397"
                 data-ad-slot="3705414261"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    </div>
</body>
</html>

