@model AlwaysMoveForward.OAuth2.Common.DomainModel.APIManagement.ApiResources;
@using AlwaysMoveForward.OAuth2.Common.DomainModel.APIManagement;
@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	ViewBag.SelectedTab = 6;
}

@section headerPlugins
	{
	<script src="~/js/Controllers/ApiResourceController.js" type="text/javascript"></script>
}

@{
	Dictionary<String, String> readonlyAttributes = new Dictionary<string, string>();
	readonlyAttributes.Add("class", "readonly");
	readonlyAttributes.Add("disabled", "true");

}
<div class="bodyContent">
		<div class="contentPageTitle">
			<label>Manage Apis</label>
		</div>
		<input type="hidden" name="selectedApi" value="@Model.Id" />
		<input type="text" name="apiResourceName" value="@Model.Name" />
		<input type="text" name="apiResourceDisplayName" value="@Model.DisplayName" />
		<input type="text" name="apiResourceDescription" value="@Model.Description" />
		<input type="checkbox" name="apiResourceEnabled" value="@Model.Enabled" />

		<div class="panel-heading">
			<h3 class="panel-title">Secrets</h3>
		</div>
		<div class="panel-body">

		</div>
		<div class="panel-heading">
			<h3 class="panel-title">Claims</h3>
		</div>
		<div class="panel-body">
			<input type="checkbox" id="@IdentityModel.JwtClaimTypes.Name" value="@IdentityModel.JwtClaimTypes.Name" checked=false/>
			<input type="checkbox" id="@IdentityModel.JwtClaimTypes.Email" value="@IdentityModel.JwtClaimTypes.Email" checked=false />
			<input type="checkbox" id="@IdentityModel.JwtClaimTypes.Role" value="@IdentityModel.JwtClaimTypes.Role" checked=false />
		</div>
		<div class="panel-heading">
			<h3 class="panel-title">Scopes</h3>
		</div>
		<div class="panel-body">
			<table class="table table-striped">
				<thead>
					<tr>
						<th width="20%">Name</th>
						<th width="20%">Display Name</th>
						<th width="20%">Description</th>
						<th width="10%">Required</th>
					</tr>
				</thead>
				<tbody>
					@foreach (ApiScopes scope in @Model.ApiScopes)
					{
					<tr>
						<td>@scope.Name</td>
						<td>@scope.DisplayName</td>
						<td>@scope.Description</td>
						<td>@scope.Required</td>
					</tr>
					}
					<tr ng-form="newApiResourceForm">
						<td></td>
						<td><input type="text" name="newApiResourceName" ng-model="newApiResource.name" required /></td>
						<td><input type="text" name="newApiResourceDisplayName" ng-model="newApiResource.displayName" required /></td>
						<td><input type="text" name="newApiResourceDescription" ng-model="newApiResource.description" required /></td>
						<td><input type="checkbox" name="newApiResourceEnabled" ng-model="newApiResource.enabled" value="false" /></td>
						<td><input type="button" class="btn btn-primary" value="Add Api Resource" ng-click="addApiResource();" /></td>
					</tr>
				</tbody>
			</table>
			<br />
		</div>
	</form>
</div>




