@model AlwaysMoveForward.Core.Common.Utilities.IPagedList<AlwaysMoveForward.OAuth2.Common.DomainModel.Consumer>
@using AlwaysMoveForward.OAuth2.Web.Code.Extensions;
@{
    ViewBag.Title = "Manage Consumers";
    ViewBag.SelectedTab = 1;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section headerPlugins
{
    <link href="~/css/Pager.css" rel="stylesheet" type="text/css" />
}
<div class="bodyContent">
    <div class="contentPageTitle">
        <H1>Manage Consumers</H1>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th width="20%">Consumer Key</th>
                <th width="20%">Name</th>
                <th width="20%">Contact Email</th>
                <th width="20%">Allow AutoGrant</th>
                <th width="20%">Token Lifetime</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (AlwaysMoveForward.OAuth2.Common.DomainModel.Consumer oauthConsumer in @Model)
                {
                    <tr>
                        <td><a href="/Admin/ManageConsumers/Edit/@oauthConsumer.ConsumerKey.ToString()">@oauthConsumer.ConsumerKey</a></td>
                        <td>@oauthConsumer.Name</td>
                        <td>@oauthConsumer.ContactEmail</td>
                        <td>@oauthConsumer.AutoGrant</td>
                        <td>@oauthConsumer.AccessTokenLifetime</td>
                        <td><a href="/Admin/ManageTokens/Index?consumerKey=@oauthConsumer.ConsumerKey.ToString()">Tokens</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="pager">
        @Html.Pager(@Model.PageSize, @Model.PageNumber, @Model.TotalItemCount, "Index")
    </div>
</div>

