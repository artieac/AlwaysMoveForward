@model AlwaysMoveForward.OAuth2.Web.Models.Account.LoginModel
@{
	ViewBag.Title = "Forgot Password";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="messaging-container">
	<div id="ctlx2" class="panel panel-primary loginPanel">
		<div class="panel-heading">
			<h3 class="panel-title">Forgot your password?</h3>
		</div>
		<div class="panel-body">
			<form id="registrationForm" action="/Account/ResetPassword" method="post">
				<input type="hidden" name="returnUrl" id="oauthToken" value="@Model.ReturnUrl" />
				<input type="text" name="userEmail" id="userEmai" />
				<button id="submitButton" class="btn btn-primary">Reset Password</button>
			</form>
		</div>
	</div>
</div>