@model AlwaysMoveForward.OAuth.WebServer.Models.TokenModel
@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section headerPlugins
{
    <script src="@Url.Content("~/Scripts/UI/SignIn.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#signinButton").click(function () {
                SignIn.SubmitLogin();
            });
        });
    </script>
}
<div class="messaging-container">
    <div id="ctlx2" class="panel panel-primary loginPanel">
        <div class="panel-heading">
            <h3 class="panel-title">
            @if(!string.IsNullOrEmpty(Model.ConsumerName))
            {
                <text>Sign in to @Model.ConsumerName with your AlwaysMoveForward account</text>  
            }
            else
            {
                <text>Sign in with your AlwaysMoveForward account</text>
            }
            </h3>
        </div>
        <div class="panel-body">
            <form id="loginForm" action="/User/ProcessSignIn" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="oauthToken" value="@Model.Token" />
                <div>
                    <span class="label">Email:</span>
                    <input type="text" id='userName' name="userName" />
                </div>
                <div>
                    <span class="label">Password:</span>
                    <input type="password" name="password" />
                </div>
                <br/>
                <div id="footerSection">
                    <button id="signinButton" class="btn btn-primary">Sign In</button>
                    <div>
                        <span>Not a user? <a href="/User/Signup?oauthToken=@Model.Token">click here</a> to sign up.</span>
                    </div>
                </div>
            </form>
        </div>
        <div id="divForgotPassword" class="forgotPasswordSection">
            <div>
                <span class="forgotPasswordLabel" id="forgotPasswordLabel">Forgot your password?</span>
            </div>
            <div>
                <form id="showPasswordHintForm" action="/User/PasswordHint" method="post">
                    <input type="hidden" id="hintEmailAddress" name="emailAddress" />
                    <button class="btn btn-primary" onclick="javascript:SignIn.ShowPasswordHint();">Show my password hint</button>
                </form>
                <div id="passwordHintSection"></div>
            </div>
            <a onclick="needToConfirm = false;document.getElementById(&#39;txtEmail&#39;).disabled=false;try {formInteraction(&#39;SignIn&#39;);}catch(e){};" id="btnResetPassword" tabindex="6" href="javascript:__doPostBack(&#39;btnResetPassword&#39;,&#39;&#39;)">Reset my password</a><br />
        </div>
    </div>
</div>



