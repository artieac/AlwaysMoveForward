@model VP.Digital.Security.OAuth.WebServer.Models.TokenModel
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section headerPlugins
{
    <script src="@Url.Content("~/Scripts/UI/Register.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#submitRegistrationButton").click(function () {
                Register.Submit();
            });
        });
    </script>
}
<div class="messaging-container">
    <div class="logo-container">
        <img class="pngfix" alt="Vistaprint. Make an impression." src="/Sales/Utility/ResponsiveImage.caspx?s=%2fvp%2fimages%2fvp-site%2fcommon%2flogo%2fvistaprint-site-blue-209-42-2014-2x.png&amp;w=209&amp;h=42&amp;cl=0&amp;ct=0&amp;cw=0&amp;ch=0&amp;langid=1&amp;q=0&amp;c=255&amp;hc=004b40c0&amp;ie6=0&amp;render_tech=HybridGdipWpf" style="width:209px;height:42px;" />
    </div>
    <div id="ctlx2" class="panel panel-primary loginPanel">
        <div class="panel-heading">
            <h3 class="panel-title">
                @if (!string.IsNullOrEmpty(Model.ConsumerName))
                {
                    <text>Register to sign in to @Model.ConsumerName with your Digital account</text>
                }
                else
                {
                    <text>Register to sign in.</text>
                }
            </h3>
        </div>
        <div class="panel-body">
            <form id="registrationForm" action="/User/Register" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="oauthToken" value="@Model.Token" />
                <div>
                    <div>
                        <span class="label">Email:</span>
                        <input type="text" name="userEmail" />
                    </div>
                </div>
                <div>
                    <span class="label">First Name:</span>
                    <input type="text" name="firstName" />
                </div>
                <div>
                    <span class="label">Last Name:</span>
                    <input type="text" name="lastName" />
                </div>
                <div>
                    <div>
                        <span class="label">Password:</span>
                        <input type="password" name="password" />
                    </div>
                    <div>
                        <span class="label">Re-type Password:</span>
                        <input type="password" name="passwordConfirm" />
                    </div>
                    <div>
                        <span class="label">Password Hint:</span>
                        <input type="text" name="passwordHint" />
                    </div>
                </div>
                <br/>
                <button id="submitRegistrationButton" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>